<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/rlShare"
    android:background="#F6F6F8">
    <Button 
        android:id="@+id/aboveButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/noticeboard_invitetitle"
        />
    <ImageView 
        android:id="@+id/contentImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/aboveButton"
        android:background="@drawable/share_page_contentimg"
        />
    <TextView 
        android:id="@+id/linkTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contentImageView"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#A3B2C1"
        android:text="@string/sharePageDescribe"
        />
    <TextView 
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#5ED8B7"
        android:layout_below="@+id/linkTextView"
        android:text="@string/shareContent"
        />
    <Button 
        android:id="@+id/copyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contentTextView"
        android:gravity="center"
        android:text="@string/sharePageCopyButton"
        android:textSize="20sp"
        android:textColor="#5ED8B7"
        android:background="@drawable/sharepagecopybutton"
        />
    <Button 
        android:id="@+id/fbshareView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contentTextView"
        android:gravity="center"
        android:text="@string/sharePageFbShareButton"
        android:textSize="20sp"
        android:textColor="#73A1FF"
        android:background="@drawable/sharepagesharebutton"
        />

</RelativeLayout>
